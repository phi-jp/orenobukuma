header
  nav.blue.darken-4
    div.row
      div.col.s12
        div.brand-logo
          a(href='#home') オレのブクマ
        ul.right(if='{!isLogin()}')
          li
            a(onclick='{login}') Login
        ul.right(if='{isLogin()}')
          li
            a(href='{"#" + user.name}') {user.name}
          li
            a(onclick='{logout}') Logout
  script.
    this.login = function() {
      db.twitterLogin(function() {
        riot.route('home');
      });
    };
    this.logout = function() {
      riot.route('lp');
      db.logout();
    };

    this.isLogin = function() {
      return !!window.authData;
    };




